global proc vstSelectHandle ( string $object, float $offsetX, float $offsetY, float $offsetZ)
{
	select $object;
	toggle -selectHandle;
	string $handle = ($object + ".selectHandle");
	select -r $handle ;
	move -r  $offsetX $offsetY $offsetZ ;
}