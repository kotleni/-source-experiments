//enable translation on the first joint of all finger controls...select -r Ref:bip_pinky_0_RControl ;select -tgl Ref:bip_ring_0_RControl ;select -tgl Ref:bip_middle_0_RControl ;select -tgl Ref:bip_thumb_0_RControl ;select -tgl Ref:bip_index_0_RControl ;select -tgl Ref:bip_thumb_0_LControl ;select -tgl Ref:bip_pinky_0_LControl ;select -tgl Ref:bip_ring_0_LControl ;select -tgl Ref:bip_middle_0_LControl ;select -tgl Ref:bip_index_0_LControl ;setAttr -k true -lock false ".tx";setAttr -k true -lock false ".ty";setAttr -k true -lock false ".tz";//create shoulder controls...string $c1[] = `sphere -p 0 0 0 -ax 0 1 0 -ssw 0 -esw 360 -r 1.5 -d 3 -ut 0 -tol 0.01 -s 6 -nsp 4 -ch 1 -n "lShoulderControl"`;vstSetDisplay( "L", $c1[0] );string $cr[] = `sphere -p 0 0 0 -ax 0 1 0 -ssw 0 -esw 360 -r 1.5 -d 3 -ut 0 -tol 0.01 -s 6 -nsp 4 -ch 1 -n "rShoulderControl"`;vstSetDisplay( "R", $cr[0] );float $blt[] = `xform -q -t -ws "Ref:bip_collar_L"`;float $brt[] = `xform -q -t -ws "Ref:bip_collar_R"`;xform -ws -t $blt[0] $blt[1] $blt[2] $c1[0];xform -ws -t $brt[0] $brt[1] $brt[2] $cr[0];parent $c1[0] $cr[0] "main";makeIdentity -apply true -t 1 -r 1 -s 0 -n 0 $c1[0];makeIdentity -apply true -t 1 -r 1 -s 0 -n 0 $cr[0];parentConstraint -mo -w 1 $c1[0] "Ref:bip_collar_L";parentConstraint -mo -w 1 $cr[0] "Ref:bip_collar_R";